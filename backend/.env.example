# KUDA Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kuda_dev

# Optional Database Pool Configuration
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Server Configuration
PORT=4000
NODE_ENV=development

# AWS S3 Configuration (for asset storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET_NAME=kuda-assets-dev

# JWT Configuration (for authentication)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Gmail API Configuration (for email threading - Phase 2)
GMAIL_CLIENT_ID=your_gmail_client_id_here
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:4000/auth/gmail/callback

# Logging
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Phase 1 Feature Flags
ENABLE_LOGO_DETECTION=true
ENABLE_COLOR_EXTRACTION=true
ENABLE_DOCUMENT_SCANNING=true
ENABLE_MINIMAL_BRIEF=true

# Performance Monitoring
ENABLE_PERFORMANCE_LOGGING=true
SLOW_QUERY_THRESHOLD_MS=1000
