# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/creative_approval
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=creative_approval
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# AWS S3 Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
S3_BUCKET=creative-approval-assets
S3_BUCKET_REGION=us-east-1

# Gmail API Configuration
# Follow: https://developers.google.com/gmail/api/quickstart/nodejs
GMAIL_CLIENT_ID=your_google_oauth_client_id
GMAIL_CLIENT_SECRET=your_google_oauth_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
GMAIL_FROM_EMAIL=approvals@kargo.com
GMAIL_FROM_NAME=Kargo Creative Approval System

# Celtra API Configuration
CELTRA_API_KEY=your_celtra_api_key_here
CELTRA_API_URL=https://api.celtra.com/v2

# Authentication
JWT_SECRET=your_random_secret_key_minimum_32_characters_here
JWT_EXPIRATION=24h
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:4000/api/auth/google/callback

# Client Portal
CLIENT_PORTAL_TOKEN_EXPIRY_DAYS=30
CLIENT_PORTAL_BASE_URL=http://localhost:3000/portal

# Application Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:4000
API_PREFIX=/api

# File Upload
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/quicktime,video/x-msvideo

# Email Notification Settings
SEND_EMAILS=true
EMAIL_BATCH_SIZE=10
EMAIL_RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your_session_secret_here

# CORS
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_BULK_OPERATIONS=true
ENABLE_CLIENT_PORTAL=true
ENABLE_CELTRA_INTEGRATION=true

# Monitoring (Optional)
SENTRY_DSN=
LOGTAIL_SOURCE_TOKEN=

